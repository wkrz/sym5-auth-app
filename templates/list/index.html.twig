{% extends 'base.html.twig' %}

{% block title %}List of Users{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card bg-light mb-3 mt-3">
          <div class="card-body">
            <div class="card-header">
              List of Users
            </div>
            <table class="table">
              <tr>
                <th>Username</th>
                <th class="text-right">Action</th>
              </tr>
              {% for user in pagination %}
                <tr>
                  <td>{{ user.username }}</td>
                  <td class="text-right">
                    {% if not user.active %}
                      disabled
                      {% else %}
                        {% if app.user is same as(user) %}
                          You cannot perform an action on yourself
                          {% else %}
                            <a href="{{ path('disable_user', {'user': user.id}) }}" class="btn btn-danger">Disable</a>
                        {% endif %}
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
            </table>
            <div>
              {{ knp_pagination_render(pagination) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
